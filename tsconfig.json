{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "pretty": true,
    "allowJs": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["src/", "react-native.js"]
}
