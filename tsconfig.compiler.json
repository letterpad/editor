{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "rootDirs": ["src", "demo"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "declaration": true,
    "noEmit": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": ".",
    "paths": {
      "@editor/*": ["src/editor/*"],
      "@hooks/*": ["src/hooks/*"],
      "@plugins/*": ["src/plugins/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@demo/*": ["demo/*"]
    }
  }
}
