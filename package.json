{
  "name": "@letterpad/editor",
  "main": "bundles/bundle.js",
  "version": "0.0.1",
  "description": "The letterpad editor - A high level abstraction of the slate editor with plugin architecture",
  "files": [
    "bundles/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "e2e:headless": "yarn start-server-and-test testServer http://localhost:4343 cy:run",
    "e2e": "yarn start-server-and-test testServer http://localhost:4343 cy:open",
    "build": "tsc --build tsconfig.build.json",
